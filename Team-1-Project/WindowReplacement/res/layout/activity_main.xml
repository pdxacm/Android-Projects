<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView 
        android:id="@+id/stateLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stateString"
        android:textSize="@dimen/text_view_dimen" />
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/stateHintString"
        android:inputType="text" />

    <TextView 
        android:id="@+id/heatTypeLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heatTypeString"
        android:textSize="@dimen/text_view_dimen" />
        
    <Spinner
        android:id="@+id/energySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/monthlyCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monthlyCostString"
        android:textSize="@dimen/text_view_dimen" />
    
    <EditText
        android:id="@+id/monthlyCostEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/monthlyCostHintString"
        android:inputType="number" />
    
  	<Button 
  	    android:id="@+id/nextButton"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_marginTop="10dp"
  	    android:layout_marginLeft="10dp"
  	    android:text="@string/nextButtonString" />
    

</LinearLayout>
